{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmname": {
           "type": "string",
            "defaultValue": "armVM"}
    },
    "variables": {
        "vNIC": "[concat(parameters('vmname'),'-vNIC')]"
    },
    "resources": [
        
                                       {
            "name": "[concat(variables('vNIC'),copyIndex())]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'Test-vnet', 'default')]"
                            }
                        }
                    }
                ]
            },
            "copy":{
                "name": "vairakas",
                "count": 4                
            }
                          },
        {
            "name": "[concat (parameters('vmname'), copyIndex())]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
             //   "[resourceId('Microsoft.Storage/storageAccounts', toLower(variables('osDisk')))]",
                "[resourceId('Microsoft.Network/networkInterfaces', concat( variables('vNIC'), copyIndex()))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A1_v2"
                },
                "osProfile": {
                    "computerName": "[parameters('vmname')]",
                    "adminUsername": "userROOT",
                    "adminPassword": "Parole123@"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name":  "[concat (parameters('vmname'), copyIndex(), ' -osDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('vNIC'),copyIndex()))]"
                        }
                    ]
                }
                
            },
            "copy":{
                "name": "vairakas",
                "count": 4                
            }
        }           
    ]
}
